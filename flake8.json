{
    "problemMatcher": [
        {
            "owner": "flake8-error",
            "severity": "error",
            "pattern": [
                {
                    "regexp": "Found violations: (.+)",
                    "file": 1
                },
                {
                    "regexp": "^\\s*([EF]\\d{3}) @ (\\d+):(\\d+)\\s-\\s(.+)$",
                    "line": 2,
                    "column": 3,
                    "message": 4,
                    "code": 1,
                    "loop": true
                }
            ]
        },
        {
            "owner": "flake8-warning",
            "severity": "warning",
            "pattern": [
                {
                    "regexp": "Found violations: (.+)",
                    "file": 1
                },
                {
                    "regexp": "^\\s*([CRW]\\d{3}) @ (\\d+):(\\d+)\\s-\\s(.+)$",
                    "line": 2,
                    "column": 3,
                    "message": 4,
                    "code": 1,
                    "loop": true
                }
            ]
        }
    ]
}
